# P2L智能路由系统环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 环境设置
P2L_ENV=development

# 后端服务配置
P2L_HOST=0.0.0.0
P2L_PORT=8080
P2L_DEBUG=true
P2L_LOG_LEVEL=INFO

# 模型配置
P2L_MODELS_DIR=./models
P2L_MAX_MODEL_CACHE=3

# API配置
P2L_API_TIMEOUT=30
P2L_MAX_PROMPT_LENGTH=10000

# 前端配置
VITE_API_BASE_URL=http://localhost:8080

# 数据库配置 (可选)
# DATABASE_URL=postgresql://user:password@localhost:5432/p2l

# Redis配置 (可选)
# REDIS_URL=redis://localhost:6379/0

# 外部API密钥 (如果需要调用真实的LLM API)
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GOOGLE_API_KEY=your_google_api_key